# Fichier d'exemple pour les variables d'environnement du backend
# Copiez ce fichier vers .env et modifiez les valeurs selon vos besoins

# Configuration Flask
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=app.py

# Configuration de l'application
MAX_FILE_SIZE=16777216  # 16MB en octets
UPLOAD_FOLDER=uploads
EXPORT_FOLDER=exports

# Configuration OpenAI
# Remplacez par votre vraie clé API OpenAI (commence par sk-...)
OPENAI_API_KEY=your-openai-api-key-here

# Configuration de sécurité
SECRET_KEY=smart-excel-secret-key-change-in-production

# Configuration CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configuration de logging
LOG_LEVEL=INFO